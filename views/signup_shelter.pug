extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        
        // register form
        form(method='POST' action='signup_shelter' enctype='multipart/form-data')
            p

            label(for='Username') Username:
            input#Username.form-control(type='text', placeholder='Username' name='Username')
            p

            label(for='shelter_name') Shelter Name:
            input#shelter_name.form-control(type='text', placeholder='Name of Shelter' name='shelter_name')
            p

            label(for='address') Address:
            input#address.form-control(type='text', placeholder='Address' name='address')
            p

            label(for='contactnum') Contact Number:
            input#contactnum.form-control(type='text', placeholder='Contact number' name='contactnum')
            p

            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
            p

            label(for='password') Password:
            input#pw.form-control(type='password' name='password')
            p
            
            label(for='document') Attach document:
            input#document.form-control(type='file' name='document')
            p

            button.btn.btn-primary(type='submit') Sign up